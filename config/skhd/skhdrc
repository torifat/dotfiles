# Reload Yabai and SKHD configuration
cmd + alt + ctrl + r : yabai --restart; skhd --restart

# Focus windows in a direction (hjkl navigation)
ctrl - h : yabai -m window --focus west
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - l : yabai -m window --focus east

# Swap windows in a direction
ctrl + shift - h : yabai -m window --swap west
ctrl + shift - j : yabai -m window --swap south
ctrl + shift - k : yabai -m window --swap north
ctrl + shift - l : yabai -m window --swap east

# Move window to a different space
ctrl + alt - h : yabai -m window --display prev
ctrl + alt - l : yabai -m window --display next

# Toggle window float
ctrl + alt - f : yabai -m window --toggle float

# Toggle fullscreen
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# Resize window (Vim-like)
ctrl + alt - h : yabai -m window --resize left:-20:0
ctrl + alt - j : yabai -m window --resize bottom:0:20
ctrl + alt - k : yabai -m window --resize top:0:-20
ctrl + alt - l : yabai -m window --resize right:20:0

# Change space (Vim-like)
ctrl + alt - 1 : yabai -m space --focus 1
ctrl + alt - 2 : yabai -m space --focus 2
ctrl + alt - 3 : yabai -m space --focus 3
ctrl + alt - 4 : yabai -m space --focus 4
ctrl + alt - 5 : yabai -m space --focus 5
ctrl + alt - 6 : yabai -m space --focus 6
ctrl + alt - 7 : yabai -m space --focus 7
ctrl + alt - 8 : yabai -m space --focus 8
ctrl + alt - 9 : yabai -m space --focus 9
ctrl + alt - 0 : yabai -m space --focus 10

# Create a new space
ctrl + alt + shift - n : yabai -m space --create

# Destroy current space
ctrl + alt + shift - d : yabai -m space --destroy
